@model SessionsInterval

@{
    ViewData["Title"] = "Create";
}

    <h1>Create Interval of Sessions</h1>

<h4>Sessions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInterval">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start date</label>
                <input asp-for="StartDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")"
                    min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End date</label>
                <input asp-for="EndDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.Time" class="control-label"></label>
                <input asp-for="Session.Time" class="form-control" />
                <span asp-validation-for="Session.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.IdHall" class="control-label">Hall</label>
                <select asp-for="Session.IdHall" class="form-control" asp-items="ViewBag.IdHall"></select>
            </div>
            <div class="form-group">
                <label asp-for="Session.IdFilm" class="control-label">Film</label>
                <select asp-for="Session.IdFilm" class="form-control" asp-items="ViewBag.IdFilm"></select>
            </div>
            <div class="form-group">
                <label asp-for="Session.Price" class="control-label"></label>
                <input asp-for="Session.Price" class="form-control" />
                <span asp-validation-for="Session.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
